    <!-- The styles -->
    <link rel="stylesheet" href="~/Content/Template/css/bootstrap.min.css" />
    <link href="~/Content/Template/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Template/css/animate.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Template/css/owl.carousel.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Template/css/venobox.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/Content/Template/css/styles.css" />

</head>

<body>

    <div id="preloader">
        <span class="margin-bottom"><img src="~/Content/Template/images/loader.gif" alt="" /></span>
    </div>

    <!--  HEADER -->
    <style>
        /* Font Awesome Icons */
        @@import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
    </style>
    <header class="main-header clearfix" data-sticky_header="true">
        <section class="header-wrapper navgiation-wrapper">
            <div class="navbar navbar-default">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <img alt="Logo" src="~/Content/Template/images/logo1.png" style="width: 120px; height: auto; object-fit: contain; margin-left: 0; ">
                    </div>
                    @{
                        int usertypeid = 0;
                        int userid = 0;
                        string sessionusertype = Convert.ToString(Session["UserTypeID"]);
                        string userID = Convert.ToString(Session["UserID"]);
                        int.TryParse(sessionusertype, out usertypeid);
                        int.TryParse(userID, out userid);

                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav navbar-right">
                                <!-- Home -->
                                <li>
                                    <a href="@Url.Content("~/Home/MainHome")">
                                        <i class="fas fa-home"></i> Home
                                    </a>
                                </li>

                                <!-- About Us -->
                                <li>
                                    <a href="@Url.Content("~/Home/AboutUs")">
                                        <i class="fas fa-info-circle"></i> About Us <i class="fas fa-caret-down"></i>
                                    </a>
                                    <ul class="drop-down">
                                        <li>
                                            <a href="@Url.Content("~/Home/Contact")">
                                                <i class="fas fa-envelope"></i> Contact
                                            </a>
                                        </li>
                                        <li>
                                            <a href="@Url.Content("~/Home/FAQ")">
                                                <i class="fas fa-question-circle"></i> FAQ
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                                <!-- Find Donor -->
                                @if (usertypeid != 1)
                                {
                                    <li>
                                        <a href="@Url.Content("~/Finder/FinderDonors")">
                                            <i class="fas fa-search"></i> Find Donor
                                        </a>
                                    </li>
                                }

                                <!-- Accounts Request -->
                                @if (usertypeid == 1)
                                {
                                    <li>
                                        <a href="@Url.Content("~/Accounts/AllNewUserRequests")" title="Accounts Request">
                                            <i class="fas fa-user-plus"></i> Accounts Request
                                        </a>
                                    </li>
                                }

                                <!-- All Request -->
                                @if (usertypeid == 3 || usertypeid == 4)
                                {
                                    <li>
                                        <a href="@Url.Content("~/Finder/ShowAllRequests")" title="All Request">
                                            <i class="fas fa-list"></i> All Request
                                        </a>
                                    </li>
                                }

                                <!-- Seeker Request -->
                                @if (usertypeid == 2 || usertypeid == 5)
                                {
                                    <li>
                                        <a href="@Url.Content("~/Finder/DonorRequests")" title="All Request">
                                            <i class="fas fa-hand-holding-heart"></i> Seeker Request
                                        </a>
                                    </li>
                                }

                                <!-- Campaign -->
                                <li>
                                    <a href="#">
                                        <i class="fas fa-calendar-alt"></i> Campaign <i class="fas fa-caret-down"></i>
                                    </a>
                                    <ul class="drop-down">
                                        <li>
                                            <a href="@Url.Content("~/Home/AllCampaigns")">
                                                <i class="fas fa-list"></i> All Campaigns
                                            </a>
                                        </li>
                                        @if (usertypeid == 5)
                                        {
                                            <li>
                                                <a href="@Url.Content("~/BloodBank/AllCampaigns")">
                                                    <i class="fas fa-plus"></i> Add Campaign
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Content("~/BloodBank/BloodBankStock")">
                                                    <i class="fas fa-tint"></i> Stock
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </li>

                                <!-- Setting -->
                                @if (usertypeid == 1)
                                {
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-cog"></i> Setting <i class="fas fa-caret-down"></i>
                                        </a>
                                        <ul class="drop-down">
                                            <li>
                                                <a href="@Url.Content("~/User/UserProfile/" +userid+ "")">
                                                    <i class="fas fa-user"></i> User Profile
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Content("~/AccountStatus/AllAccountStatus")">
                                                    <i class="fas fa-user-check"></i> Account Status
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Content("~/BloodGroup/AllBloodGroups")">
                                                    <i class="fas fa-tint"></i> Blood Group
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Content("~/CityTables/Index")">
                                                    <i class="fas fa-city"></i> Cities
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Content("~/RequestType/AllRequestType")">
                                                    <i class="fas fa-list-alt"></i> Request Type
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Content("~/UserType/AllUserType")">
                                                    <i class="fas fa-users-cog"></i> User Type
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Content("~/Home/Logout")">
                                                    <i class="fas fa-sign-out-alt"></i> LOG OUT
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                }
                                else if (usertypeid > 1)
                                {
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-cog"></i> Setting <i class="fas fa-caret-down"></i>
                                        </a>
                                        <ul class="drop-down">
                                            <li>
                                                <a href="@Url.Content("~/User/UserProfile/"+userid+"")">
                                                    <i class="fas fa-user"></i> User Profile
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Content("~/Home/Logout")">
                                                    <i class="fas fa-sign-out-alt"></i> LOG OUT
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                }

                                <!-- Register Button -->
                                @if (string.IsNullOrEmpty(Convert.ToString(Session["UserName"])))
                                {
                                    <li>
                                        <a href="@Url.Action("MainHome", "Home")#registration-section">
                                            <i class="fas fa-user-plus"></i> Register
                                        </a>
                                    </li>
                                }

                                <!-- Login/Logout Button -->
                                <li>
                                    @if (string.IsNullOrEmpty(Convert.ToString(Session["UserName"])))
                                    {
                                        <a href="@Url.Content("~/Home/Login")" id="btn_submit">
                                            <i class="fas fa-sign-in-alt"></i> LOG IN
                                        </a>
                                    }
                                    @*else
                                        {
                                            @Html.ActionLink("LOG OUT", "Logout", "Home", null, new { @id = "btn_submit" })
                                        }*@
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </section>
    </header><!-- end main-header  -->
    <!--  PAGE HEADING -->

    <section class="page-header" data-stellar-background-ratio="1.2">

        <div class="container">

            <div class="row">

                <div class="col-sm-12 text-center">

                    <h3>
                        Campaign Lists
                    </h3>

                    <p class="page-breadcrumb">
                        <a href="@Url.Content("~/Home/MainHome")">Home</a> / All Campaigns
                    </p>


                </div>

            </div> <!-- end .row  -->

        </div> <!-- end .container  -->

    </section> <!-- end .page-header  -->
    <!--  MAIN CONTENT  -->
    <!--  SECTION CAMPAIGNS   -->

    <section class="section-content-block section-secondary-bg">

        <div class="container">

            <div class="row section-heading-wrapper">

                <div class="col-md-12 col-sm-12 text-left no-img-separator">
                    <h2>ALL CAMPAIGNS</h2>
                    <span class="heading-separator heading-separator-horizontal"></span>
                    <h4>Encourage new donors to join and continue to give blood. We have total sixty thousands donor centers and visit thousands of other venues on various occasions. </h4>
                </div> <!-- end .col-sm-12  -->

            </div> <!-- end .row  -->
            @{
                int userttypeid = 0;
                var date = DateTime.Now.Date;
                string ssessionusertype = Convert.ToString(Session["UserTypeID"]);
                int.TryParse(ssessionusertype, out userttypeid);
            }

            <div class="row margin-top-48">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-sm-12">
                        <div class="event-layout-1 theme-custom-box-shadow clearfix">
                            <figure class="event-img">
                                <a href="#">
                                    <img src="@Url.Content(item.CampaignPhoto)" alt="">
                                </a>
                            </figure>
                            <div class="event-info">
                                <a class="event-date" href="#"><i class="fa fa-calendar-o"></i> @item.CampaignDate.ToString("dd MMMM, yyyy")</a>
                                <h4>
                                    <a href="#">@item.CampaignTitle</a>
                                </h4>
                                @if (userttypeid != 5)
                                {
                                    <div class="event-excerpt">@item.CampaignDetails</div>
                                }
                                <div class="event-time">
                                    <a href="#"><i class="fa fa-clock-o"></i> @item.StartTime - @item.EndTime</a>
                                    <a href="#"><i class="fa fa-map-marker"></i>@(item.Location == null ? "No Location" : item.Location)</a>
                                </div>
                                @if (userttypeid == 5 && item.CampaignDate == date)
                                {
                                    <a href="@Url.Content("~/BloodBank/BloodBankStock")" class="btn btn-theme">Collect Blood</a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>


        </div> <!--  end .container  -->

    </section>

    <!-- SECTION CTA  -->

    <section class="cta-section-2">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2>We have been helping people from 40 years</h2>
                    <p>
                        You can give blood at any of our blood donation venues all over the world. We have total sixty thousands donor centers and visit thousands of other venues on various occasions.
                    </p>
                    <a class="btn btn-theme btn-theme-invert margin-top-24" href="@Url.Action("MainHome", "Home")#registration-section">BECOME DONOR</a>
                </div> <!--  end .col-md-8  -->
            </div> <!--  end .row  -->
        </div>
    </section>

    <!-- SUCCESS STORIES SECTION -->
    <section class="success-stories" style="padding: 80px 0; background-color: #f9f9f9;">
        <div class="container">
            <div class="section-header text-center" style="margin-bottom: 50px;">
                <h2 style="font-size: 36px; color: #d63031; font-weight: 700;">Lives Changed Through Blood Bond</h2>
                <div style="width: 80px; height: 3px; background: #d63031; margin: 15px auto;"></div>
                <p style="font-size: 18px; color: #555; max-width: 700px; margin: 0 auto;">
                    Every donation creates a ripple effect of hope. Here are just a few of the thousands of stories we've been part of.
                </p>
            </div>

            <div class="row">
                <!-- Story 1 -->
                <div class="col-md-4 mb-4">
                    <div class="story-card" style="background: white; padding: 30px; height: 100%; border-radius: 8px; box-shadow: 0 5px 15px rgba(0,0,0,0.05);">
                        <div class="story-icon" style="font-size: 40px; color: #d63031; margin-bottom: 20px;">
                            <i class="fas fa-heartbeat"></i>
                        </div>
                        <h3 style="font-size: 22px; color: #333; margin-bottom: 15px;">Rahul's Second Chance</h3>
                        <p style="color: #666; line-height: 1.6; margin-bottom: 20px;">
                            "When I needed rare AB- blood after my accident, Blood Bond connected me with 3 matching donors within hours. Today I'm alive because of their network."
                        </p>
                        <div class="story-footer" style="font-size: 14px; color: #888;">
                            <strong>Mumbai, India</strong> • 2023
                        </div>
                    </div>
                </div>

                <!-- Story 2 -->
                <div class="col-md-4 mb-4">
                    <div class="story-card" style="background: white; padding: 30px; height: 100%; border-radius: 8px; box-shadow: 0 5px 15px rgba(0,0,0,0.05);">
                        <div class="story-icon" style="font-size: 40px; color: #d63031; margin-bottom: 20px;">
                            <i class="fas fa-baby"></i>
                        </div>
                        <h3 style="font-size: 22px; color: #333; margin-bottom: 15px;">Little Priya's Miracle</h3>
                        <p style="color: #666; line-height: 1.6; margin-bottom: 20px;">
                            "Our newborn needed emergency transfusion during complicated delivery. The Blood Bond app located a donor just 2km from our hospital at 2am."
                        </p>
                        <div class="story-footer" style="font-size: 14px; color: #888;">
                            <strong>Bangalore, India</strong> • 2022
                        </div>
                    </div>
                </div>

                <!-- Story 3 -->
                <div class="col-md-4 mb-4">
                    <div class="story-card" style="background: white; padding: 30px; height: 100%; border-radius: 8px; box-shadow: 0 5px 15px rgba(0,0,0,0.05);">
                        <div class="story-icon" style="font-size: 40px; color: #d63031; margin-bottom: 20px;">
                            <i class="fas fa-hand-holding-heart"></i>
                        </div>
                        <h3 style="font-size: 22px; color: #333; margin-bottom: 15px;">A Donor's Journey</h3>
                        <p style="color: #666; line-height: 1.6; margin-bottom: 20px;">
                            "I've donated 17 times through Blood Bond. Their reminders and location services make it so easy to give regularly. Knowing I've helped save lives is priceless."
                        </p>
                        <div class="story-footer" style="font-size: 14px; color: #888;">
                            <strong>Regular Donor</strong> • Since 2019
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>




