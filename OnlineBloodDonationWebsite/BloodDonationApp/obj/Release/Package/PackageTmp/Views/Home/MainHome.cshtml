@model BloodDonationApp.Models.RegisterationMV
@{
    Layout = null;
}

<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->

<head>
    <meta charset="utf-8">
    <title>Online Blood Donation </title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="Blood Boond - Online Blood Donation">
    <link rel="shortcut icon" href="~/Content/Template/images/favicon.png" />

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- The styles -->
    <link rel="stylesheet" href="~/Content/Template/css/bootstrap.min.css" />
    <link href="~/Content/Template/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Template/css/animate.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Template/css/owl.carousel.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Template/css/venobox.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/Content/Template/css/styles.css" />


</head>

<body>

    <div id="preloader">
        <span class="margin-bottom"><img src="~/Content/Template/images/loader.gif" alt="" /></span>
    </div>

    <!--  HEADER -->
    <style>
        /* Font Awesome Icons */
        @@import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
    </style>
    <header class="main-header clearfix" data-sticky_header="true">
        <section class="header-wrapper navgiation-wrapper">
            <div class="navbar navbar-default">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <img alt="Logo" src="~/Content/Template/images/logo1.png" style="width: 120px; height: auto; object-fit: contain; margin-left: 0; ">
                    </div>
                    @{
                        int usertypeid = 0;
                        int userid = 0;
                        string sessionusertype = Convert.ToString(Session["UserTypeID"]);
                        string userID = Convert.ToString(Session["UserID"]);
                        int.TryParse(sessionusertype, out usertypeid);
                        int.TryParse(userID, out userid);

                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav navbar-right">
                                <!-- Home -->
                                <li>
                                    <a href="@Url.Content("~/Home/MainHome")">
                                        <i class="fas fa-home"></i> Home
                                    </a>
                                </li>

                                <!-- About Us -->
                                <li>
                                    <a href="@Url.Content("~/Home/AboutUs")">
                                        <i class="fas fa-info-circle"></i> About Us <i class="fas fa-caret-down"></i>
                                    </a>
                                    <ul class="drop-down">
                                        <li>
                                            <a href="@Url.Content("~/Home/Contact")">
                                                <i class="fas fa-envelope"></i> Contact
                                            </a>
                                        </li>
                                        <li>
                                            <a href="@Url.Content("~/Home/FAQ")">
                                                <i class="fas fa-question-circle"></i> FAQ
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                                <!-- Find Donor -->
                                @if (usertypeid != 1)
                                {
                                    <li>
                                        <a href="@Url.Content("~/Finder/FinderDonors")">
                                            <i class="fas fa-search"></i> Find Donor
                                        </a>
                                    </li>
                                }

                                <!-- Accounts Request -->
                                @if (usertypeid == 1)
                                {
                                    <li>
                                        <a href="@Url.Content("~/Accounts/AllNewUserRequests")" title="Accounts Request">
                                            <i class="fas fa-user-plus"></i> Accounts Request
                                        </a>
                                    </li>
                                }

                                <!-- All Request -->
                                @if (usertypeid == 3 || usertypeid == 4)
                                {
                                    <li>
                                        <a href="@Url.Content("~/Finder/ShowAllRequests")" title="All Request">
                                            <i class="fas fa-list"></i> All Request
                                        </a>
                                    </li>
                                }

                                <!-- Seeker Request -->
                                @if (usertypeid == 2 || usertypeid == 5)
                                {
                                    <li>
                                        <a href="@Url.Content("~/Finder/DonorRequests")" title="All Request">
                                            <i class="fas fa-hand-holding-heart"></i> Seeker Request
                                        </a>
                                    </li>
                                }

                                <!-- Campaign -->
                                <li>
                                    <a href="#">
                                        <i class="fas fa-calendar-alt"></i> Campaign <i class="fas fa-caret-down"></i>
                                    </a>
                                    <ul class="drop-down">
                                        <li>
                                            <a href="@Url.Content("~/Home/AllCampaigns")">
                                                <i class="fas fa-list"></i> All Campaigns
                                            </a>
                                        </li>
                                        @if (usertypeid == 5)
                                        {
                                            <li>
                                                <a href="@Url.Content("~/BloodBank/AllCampaigns")">
                                                    <i class="fas fa-plus"></i> Add Campaign
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Content("~/BloodBank/BloodBankStock")">
                                                    <i class="fas fa-tint"></i> Stock
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </li>

                                <!-- Setting -->
                                @if (usertypeid == 1)
                                {
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-cog"></i> Setting <i class="fas fa-caret-down"></i>
                                        </a>
                                        <ul class="drop-down">
                                            <li>
                                                <a href="@Url.Content("~/User/UserProfile/" +userid+ "")">
                                                    <i class="fas fa-user"></i> User Profile
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Content("~/AccountStatus/AllAccountStatus")">
                                                    <i class="fas fa-user-check"></i> Account Status
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Content("~/BloodGroup/AllBloodGroups")">
                                                    <i class="fas fa-tint"></i> Blood Group
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Content("~/CityTables/Index")">
                                                    <i class="fas fa-city"></i> Cities
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Content("~/RequestType/AllRequestType")">
                                                    <i class="fas fa-list-alt"></i> Request Type
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Content("~/UserType/AllUserType")">
                                                    <i class="fas fa-users-cog"></i> User Type
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Content("~/Home/Logout")">
                                                    <i class="fas fa-sign-out-alt"></i> LOG OUT
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                }
                                else if (usertypeid > 1)
                                {
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-cog"></i> Setting <i class="fas fa-caret-down"></i>
                                        </a>
                                        <ul class="drop-down">
                                            <li>
                                                <a href="@Url.Content("~/User/UserProfile/"+userid+"")">
                                                    <i class="fas fa-user"></i> User Profile
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Content("~/Home/Logout")">
                                                    <i class="fas fa-sign-out-alt"></i> LOG OUT
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                }

                                <!-- Register Button -->
                                @if (string.IsNullOrEmpty(Convert.ToString(Session["UserName"])))
                                {
                                    <li>
                                        <a href="@Url.Action("MainHome", "Home")#registration-section">
                                            <i class="fas fa-user-plus"></i> Register
                                        </a>
                                    </li>
                                }

                                <!-- Login/Logout Button -->
                                <li>
                                    @if (string.IsNullOrEmpty(Convert.ToString(Session["UserName"])))
                                    {
                                        <a href="@Url.Content("~/Home/Login")" id="btn_submit">
                                            <i class="fas fa-sign-in-alt"></i> LOG IN
                                        </a>
                                    }
                                    @*else
                                        {
                                            @Html.ActionLink("LOG OUT", "Logout", "Home", null, new { @id = "btn_submit" })
                                        }*@
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </section>
    </header>
    <!-- end main-header  -->

    <div class="slider-wrap">
        <div id="slider_1" class="owl-carousel" data-nav="true" data-dots="false" data-autoplay="true" data-autoplaytimeout="17000">

            <!-- First Slider Item -->
            <div class="slider_item_container" data-bg_img="@Url.Content("~/Content/Template/images/home_1_slider_1.png")" data-bg_color="#555555" data-bg_opacity="0.0">
                <div class="item">
                    <div class="slider-content">
                        <div class="container text-left">
                            <div class="row">
                                <div class="slider-bg">
                                    <div class="col-sm-12 wow zoomInUp" data-wow-duration="1s">

                                        <h3>Be a hero, donate blood!</h3>
                                        <h2>
                                            YOUR DONATION
                                            <br>
                                            CAN SAVE LIVES
                                            <br />
                                            AND BRING HOPE
                                        </h2>
                                        <a href="/Finder/FinderDonors" class="btn btn-theme margin-top-24">Find Donor</a>
                                    </div>
                                </div> <!-- end .col-sm-12  -->
                            </div> <!-- end .row  -->
                        </div><!-- end .container -->
                    </div> <!--  end .slider-content -->
                </div> <!-- end .item  -->
            </div> <!-- end .slider_item_container  -->
            <!-- Second Slider Item -->
            <div class="slider_item_container" data-bg_img="@Url.Content("~/Content/Template/images/home_1_slider_2.png")" data-bg_color="#555555" data-bg_opacity="0.0">
                <div class="item">
                    <div class="slider-content">
                        <div class="container text-left">
                            <div class="row">
                                <div class="slider-bg" data-animation-in="zoomInUp" data-animation-out="zoomInDown">
                                    <div class="col-sm-12 wow fadeInDown" data-wow-duration="1s">

                                        <h3>Join the cause, save lives!</h3>
                                        <h2>
                                            GIVE BLOOD,
                                            <br>
                                            GIVE THE GIFT OF LIFE.
                                        </h2>
                                        <a href="#registerationsection" class="btn btn-theme margin-top-24">Donate Now</a>
                                    </div>
                                </div> <!-- end .col-sm-12  -->
                            </div> <!-- end .row  -->
                        </div><!-- end .container -->
                    </div> <!--  end .slider-content -->
                </div> <!-- end .item  -->
            </div> <!-- end .slider_item_container  -->

        </div> <!-- end .slider_1  -->
    </div>

    <!-- end .slider-wrap.  -->
    <!--  FEATURED ABOUT US SECTION-->

    <section class="section-content-block">

        <div class="container">

            <div class="row">

                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">

                    <div class="about-us-container theme-custom-box-shadow">

                        <div class="row section-heading-wrapper margin-bottom-11">

                            <div class="col-lg-12 col-md-12 col-sm-12 text-left no-img-separator">
                                <h2><strong>Who We Are?</strong></h2>
                                <span class="heading-separator heading-separator-horizontal"></span>
                            </div> <!-- end .col-sm-10  -->

                        </div>

                        <div class="about-details">

                            <p>Blood Bond is a trusted platform in India, dedicated to saving lives by connecting blood donors with those in need. We are committed to making blood donation simple, efficient, and impactful across the country.</p>

                            <ul class="custom-bullet-list">
                                <li>Expert blood donors and professional medical supervision.</li>
                                <li>Seamless communication between donors and recipients.</li>
                                <li>Advanced assessment and high-quality care for all.</li>
                                <li>Rigorous processes to ensure safety and alignment with Indian healthcare standards.</li>
                                <li>Comprehensive support from a dedicated team of healthcare professionals.</li>
                            </ul>



                        </div> <!--  end .about-details -->

                    </div>

                </div> <!--  end .col-lg-6 col-md-6 col-sm-12 col-xs-12 -->


                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">

                    <figure class="about-img theme-custom-box-shadow">
                        <a class="venobox wow bounceIn" data-vbtype="video" data-autoplay="true" href="https://youtu.be/_JlmwDqaYA0?si=2cFkhLY6sDz1xf3e" aria-label="Play Video About Blood Bond">
                            <i class="fa fa-play"></i>
                        </a>
                        <img src="~/Content/Template/images/about_feat_bg.png" alt="Blood Bond - Saving Lives Across India" />
                    </figure> <!-- end .cause-img  -->

                </div> <!--  end .col-lg-6 col-md-6 col-sm-12 col-xs-12  -->

            </div> <!--  end .row  -->
        </div>

    </section> <!--  end .section-about-us -->
    <!-- SECTION TESTIMONIAL   -->

    <section class="section-content-block section-custom-bg" data-bg_img='@Url.Content("~/Content/Template/images/testimony_feat_bg.jpg")' data-bg_size='cover' data-bg_position='top center' data-bg_opacity="0">

        <div class="container margin-top-80">
            <div class="row section-heading-wrapper-alt">

                <div class="col-md-12 col-sm-12 text-center no-img-separator">
                    <h4>Inspiring Stories From Our Community</h4>
                    <span class="heading-separator heading-separator-horizontal"></span>
                    <h2 class="extra-large">JOIN US AND SAVE LIVES</h2>
                    <h4 class="margin-top-12"><small>रक्त दान जीवन दान</small></h4> <!-- Hindi subheading: "Blood Donation is Life Donation" -->
                </div>

            </div>
        </div>

        <div class="container theme-custom-box-shadow section-pure-white-bg margin-top-48 margin-bottom-48 wow fadeInUp">

            <div class="row">

                <div class="col-lg-6 col-md-12 col-sm-12">

                    <div class="testimonial-container owl-carousel text-left" data-items="1">

                        <!-- Donor 1 - Indian Context -->
                        <div class="col-md-12 col-sm-12">
                            <div class="testimony-layout-1">
                                <h3 class="people-quote">Regular Donor's Story</h3>
                                <p class="testimony-text">
                                    As a Blood Bond donor for 5 years, I've donated across Mumbai, Delhi, and Bengaluru. Knowing my blood helped accident victims during monsoon season gives me immense satisfaction. Every Indian should donate!
                                </p>
                                <img src="~/Content/Template/images/user_1.jpg" alt="Aarav Sharma - Blood Donor" />
                                <h6>Aarav Sharma</h6>
                                <span>Software Engineer, Bengaluru</span>
                            </div>
                        </div>

                        <!-- Donor 2 - Indian Context -->
                        <div class="col-md-12 col-sm-12">
                            <div class="testimony-layout-1">
                                <h3 class="people-quote">First-Time Donor</h3>
                                <p class="testimony-text">
                                    I donated blood during a college camp in Jaipur. Blood Bond made it so easy! Their team explained how my single donation could help 3 lives. I'm now a regular donor - my family's tradition.
                                </p>
                                <img src="~/Content/Template/images/user_2.jpg" alt="Priya Patel - Blood Donor" />
                                <h6>Priya Patel</h6>
                                <span>Teacher, Ahmedabad</span>
                            </div>
                        </div>

                        <!-- Recipient Story - Indian Context -->
                        <div class="col-md-12 col-sm-12">
                            <div class="testimony-layout-1">
                                <h3 class="people-quote">Recipient's Gratitude</h3>
                                <p class="testimony-text">
                                    When my father needed urgent blood during Diwali, Blood Bond connected us with a donor in 30 minutes. We're forever grateful to the stranger who came to Pune Civil Hospital that night.
                                </p>
                                <img src="~/Content/Template/images/user_3.jpg" alt="Anika Reddy - Blood Recipient" />
                                <h6>Anika Reddy</h6>
                                <span>Medical Student, Hyderabad</span>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="col-lg-6 hidden-md hidden-xs hidden-sm no-padding">
                    <figure>
                        <img src="~/Content/Template/images/testimony_feat_img (2).jpg" alt="Blood Bond Donors Across India" class="db" />
                    </figure>
                </div>

            </div>

        </div> <!-- end .container -->

    </section>

    <!--  SECTION CAMPAIGNS   -->

    <section class="section-content-block section-pure-white-bg">

        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-5">
                    <div class="row section-heading-wrapper">
                        <div class="col-md-12 col-sm-12 text-left no-img-separator">
                            <h2>OUR CAMPAIGNS</h2>
                            <span class="heading-separator heading-separator-horizontal"></span>
                            <h4 class="margin-top-24">
                                <small>
                                    All over the world we have arranged total sixty thousands donation campaign
                                    and visit thousands of other venues on various occasions.
                                </small>
                            </h4>
                            <a class="btn btn-theme margin-top-32" href="@Url.Content("~/Home/AllCampaigns")">Load All Campaigns</a>
                        </div> <!-- end .col-sm-12  -->
                    </div> <!-- end .row  -->
                </div>
                <div class="col-sm-12 col-md-7">
                    <div class="row wow fadeInRight">
                        <div class="event-carousel owl-carousel" data-nav="false" data-dots="true" data-items="1">
                            @{
                                List<DatabaseLayer.CampaignTable> activeallcampaigns = ViewBag.AllCampaigns != null ? (List<DatabaseLayer.CampaignTable>)ViewBag.AllCampaigns : null;
                                if (activeallcampaigns != null)
                                {
                                    foreach (var item in activeallcampaigns)
                                    {
                                        <div class="col-md-6 col-sm-12">
                                            <div class="event-layout-1 theme-custom-box-shadow clearfix">
                                                <figure class="event-img">
                                                    <a href="#">
                                                        <img src="@Url.Content(item.CampaignPhoto)" alt="">
                                                    </a>
                                                </figure>
                                                <div class="event-info">
                                                    <a class="event-date" href="#"><i class="fa fa-calendar-o"></i> @item.CampaignDate.ToString("dd MMMMM,yyyy")</a>
                                                    <h4>
                                                        <a href="#">@item.CampaignTitle</a>
                                                    </h4>
                                                    <div class="event-exceprt">@item.CampaignDetails</div>
                                                    <div class="event-time">
                                                        <a href="#"><i class="fa fa-clock-o"></i> @item.StartTime - @item.EndTime</a>
                                                        <a href="#"> <i class="fa fa-map-marker"></i>@item.Location</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="col-md-6 col-sm-12">
                                        <div class="event-layout-1 theme-custom-box-shadow clearfix">
                                            <figure class="event-img">
                                                <a href="#">
                                                    <img src="~/Content/Template/images/event_1.jpg" alt="">
                                                </a>
                                            </figure>
                                            <div class="event-info">
                                                <a class="event-date" href="#"><i class="fa fa-calendar-o"></i> 00 Month , YYYY</a>
                                                <h4>
                                                    <a href="#">Currently No Campaign</a>
                                                </h4>
                                                <div class="event-exceprt">Will be arrange shortly.</div>
                                                <div class="event-time">
                                                    <a href="#"><i class="fa fa-clock-o"></i>expected time :10.00 - 3.00</a>
                                                    <a href="#"> <i class="fa fa-map-marker"></i> No Location</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div> <!--  end .container  -->

    </section>



    <!--  SECTION APPOINTMENT BOX -->

    <section class="section-content-block section-custom-bg section-custom-bg-extra-padding" data-bg_img='@Url.Content("~/Content/Template/images/appointment_female_bg.png")' data-bg_color='#000000' data-bg_opacity='0.1'>

        <div class="container">
            <div class="custom-empty-space" data-height="160px" data-class="col-sm-hidden"></div>
        </div>

    </section>

    <!--  SECTION APPOINTMENT   -->

    <section id="registerationsection" class="section-content-block section-secondary-bg">

        <div class="container">

            <div class="row">

                <div class="col-lg-6 col-md-6">

                    <div class="row section-heading-wrapper">

                        <div class="col-md-12 col-sm-12 text-left no-img-separator">
                            <h4>Good To Know</h4>
                            <span class="heading-separator heading-separator-horizontal"></span>
                            <h2>
                                Helpful Information
                            </h2>

                        </div> <!-- end .col-sm-10  -->

                    </div>

                    <div class="about-details">

                        <ul class="custom-bullet-list">
                            <li>Maintain a healthy iron level by eating iron rich foods.</li>
                            <li>Drink an extra 16 oz. of water prior to your donation.</li>
                            <li>Avoid alcohol consumption before your blood donation.</li>
                            <li>Remember to bring the donor card or national ID/Passport.</li>
                            <li>Finally, Try to get a good night sound sleep after donation.</li>
                        </ul>

                    </div> <!--  end .about-details -->

                </div> <!--  end col-lg-6  -->

                <style>
                    /* Font Awesome Icons */
                    @@import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');

                    /* Hover Effects */
                    .form-control:hover {
                        border-color: #8a0303 !important;
                        transition: all 0.3s ease;
                    }

                    .btn-theme:hover {
                        transform: scale(1.05);
                        box-shadow: 0 4px 15px rgba(237, 45, 45, 0.5);
                        transition: all 0.3s ease;
                    }
                </style>
                <section id="registration-section" class="col-lg-6 col-md-6 col-sm-12 col-xs-12 margin-top-appointment-reverse">
                    <div class="appointment-form-wrapper theme-custom-box-shadow text-center clearfix wow zoomIn" style="background: rgba(255, 255, 255, 0.8); border-radius: 15px; padding: 30px; backdrop-filter: blur(10px); border: 1px solid rgba(237, 45, 45, 0.2);">
                        <h3 class="join-heading join-heading-alt" style="font-size: 28px; font-weight: 700; color: #ffffff; margin-bottom: 25px;">Join the Lifesaving Community</h3>
                        @using (Html.BeginForm("SelectUser", "Registration", FormMethod.Post, new { @class = "appointment-form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <!-- User Name -->
                            <div class="form-group col-md-6" style="position: relative;">
                                <i class="fas fa-user icon" style="position: absolute; top: 12px; left: 15px; color: #8a0303;"></i>
                                @Html.EditorFor(model => model.User.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "User Name", @type = "text", style = "padding-left: 40px; border-radius: 25px; border: 1px solid rgba(237, 45, 45, 0.3); background: rgba(255, 255, 255, 0.8);" } })
                                @Html.ValidationMessageFor(model => model.User.UserName, "", new { @class = "text-danger" })
                            </div>

                            <!-- Email Address -->
                            <div class="form-group col-md-6" style="position: relative;">
                                <i class="fas fa-envelope icon" style="position: absolute; top: 12px; left: 15px; color: #8a0303;"></i>
                                @Html.EditorFor(model => model.User.EmailAddress, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", @type = "email", style = "padding-left: 40px; border-radius: 25px; border: 1px solid rgba(237, 45, 45, 0.3); background: rgba(255, 255, 255, 0.8);" } })
                                @Html.ValidationMessageFor(model => model.User.EmailAddress, "", new { @class = "text-danger" })
                            </div>

                            <!-- Password -->
