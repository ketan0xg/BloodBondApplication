@model BloodDonationApp.Models.CollectBloodMV
@{
    ViewBag.Title = "Collect Blood";
}

<!-- Add custom CSS for styling -->
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
    }

    .contact-form-block {
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .contact-title {
        font-size: 28px;
        font-weight: bold;
        color: #dc3545;
        margin-bottom: 20px;
    }

    .btn-theme {
        background-color: #dc3545;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-theme:hover {
            background-color: #c82333;
            text-decoration: none;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #dc3545;
            outline: none;
        }

    .select-style {
        position: relative;
    }

        .select-style select {
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
            background: #fff;
            cursor: pointer;
        }

        .select-style::after {
            content: "▼";
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            pointer-events: none;
            color: #666;
        }

    .dl-horizontal dt {
        float: left;
        clear: left;
        width: 10em;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .dl-horizontal dd {
        margin: 0 0 20px 0;
        padding: 0 0 0 11em;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .col-md-6 {
        flex: 1;
        min-width: 300px;
    }

    h4 {
        font-size: 20px;
        color: #dc3545;
        margin-bottom: 15px;
    }

    hr {
        border: 0;
        height: 1px;
        background: #ddd;
        margin: 20px 0;
    }

    .text-danger {
        color: #dc3545;
        font-size: 14px;
    }

    /* Animation for form elements */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-control, .select-style select, .btn-theme {
        animation: fadeIn 0.5s ease-in-out;
    }
</style>

