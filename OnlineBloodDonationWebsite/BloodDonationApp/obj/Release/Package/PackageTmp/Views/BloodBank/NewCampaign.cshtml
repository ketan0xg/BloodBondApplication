                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.CampaignPhotoFile, new { @class = "form-label" })
                            <div class="input-group">
                                <input type="file" name="CampaignPhotoFile" class="form-control" id="CampaignPhotoFile">
