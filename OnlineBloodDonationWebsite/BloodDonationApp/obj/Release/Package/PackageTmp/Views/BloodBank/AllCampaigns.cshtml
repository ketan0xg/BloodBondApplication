


@model IEnumerable<DatabaseLayer.CampaignTable>

@{
    ViewBag.Title = "Campaigns";
}

<style>
    .custom-card {
        border: none;
        border-radius: 1.5rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .table-responsive {
        min-height: 300px;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .table th, .table td {
        vertical-align: middle;
        white-space: nowrap;
    }

    .img-thumbnail {
        transition: transform 0.3s ease;
    }

        .img-thumbnail:hover {
            transform: scale(1.05);
        }

    .btn-outline-primary {
        color: #e74c3c;
        border-color: #e74c3c;
    }

        .btn-outline-primary:hover {
            background-color: #e74c3c;
            color: white;
        }

    .btn-outline-danger {
        color: #c0392b;
        border-color: #c0392b;
    }

        .btn-outline-danger:hover {
            background-color: #c0392b;
            color: white;
        }

    .btn-sm {
        padding: 0.25rem 0.75rem;
        font-size: 0.875rem;
        border-radius: 0.3rem;
    }

    .alert {
        border-radius: 0.5rem;
    }

    .card-header {
        background-color: #fff;
        border-bottom: 1px solid #ddd;
    }

    .btn-theme {
        background-color: #e74c3c;
        border-color: #e74c3c;
        color: white;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        border-radius: 0.3rem;
        transition: background-color 0.3s ease;
    }

        .btn-theme:hover {
            background-color: #c0392b;
            border-color: #c0392b;
        }

    .text-primary {
        color: #e74c3c !important;
    }
</style>

<div class="container my-5">
    <!-- Error Message Display -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow custom-card">
        <div class="card-header bg-white border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <br />
                <h3 class="mb-0 text-primary">Blood Bank Campaigns</h3>
                <div>
                    @Html.ActionLink("New Campaign", "NewCampaign", null, new { @class = "btn btn-theme" })
                </div>
            </div>
        </div>
        <hr />
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Time</th>
                        <th scope="col">Location</th>
                        <th scope="col">Title</th>
                        <th scope="col">Banner</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CampaignDate.ToShortDateString()</td>
                            <td>@item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")</td>
                            <td>@item.Location</td>
                            <td>@item.CampaignTitle</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.CampaignPhoto))
                                {
                                    <img src="@Url.Content(item.CampaignPhoto)"
                                         alt="Campaign Banner"
                                         class="img-thumbnail rounded"
                                         style="max-width: 120px;">
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    @Html.ActionLink("Edit", "EditCampaign",
                                        new { id = item.CampaignID },
                                        new { @class = "btn btn-outline-primary btn-sm me-2" })

                                    @using (Html.BeginForm("DeleteCampaign", "BloodBank",
                                        new { id = item.CampaignID },
                                        FormMethod.Post,
                                        new { @class = "d-inline" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="btn btn-outline-danger btn-sm"
                                                onclick="return confirm('Are you sure you want to delete this campaign?');">
                                            Delete
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>