
@model IEnumerable<BloodDonationApp.Models.BloodBankStockMV>

@{
    ViewBag.Title = "Stock";
}

<!-- Add custom CSS for styling -->
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
    }

    .contact-form-block {
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .contact-title {
        font-size: 28px;
        font-weight: bold;
        color: #dc3545;
        margin-bottom: 20px;
    }

    .btn-theme {
        background-color: #dc3545;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        white-space: nowrap; /* Prevent text wrapping */
    }

        .btn-theme:hover {
            background-color: #c82333;
            text-decoration: none;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #dc3545;
            color: #fff;
            font-weight: bold;
        }

        .table tr:hover {
            background-color: #f5f5f5;
        }

        .table tr {
            transition: background-color 0.3s ease;
        }

    .action-buttons {
        display: flex;
        flex-wrap: wrap; /* Allow buttons to wrap on smaller screens */
        gap: 10px;
        margin-bottom: 20px;
    }

        .action-buttons a {
            text-decoration: none;
        }

    /* Animation for table rows */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .table tr {
        animation: fadeIn 0.5s ease-in-out;
    }

    /* Responsive adjustments for buttons */
    @@media (max-width: 768px) {
        .btn-theme {
            padding: 8px 16px; /* Smaller padding for smaller screens */
            font-size: 14px; /* Smaller font size for smaller screens */
        }

        .action-buttons {
            gap: 8px; /* Reduce gap between buttons */
        }
    }

    @@media (max-width: 576px) {
        .btn-theme {
            width: 100%; /* Full width buttons on very small screens */
            text-align: center;
        }

        .action-buttons {
            flex-direction: column; /* Stack buttons vertically */
        }
    }
</style>

<div class="col-md-12">
    <!-- Changed to col-md-12 for full width -->
    <div class="contact-form-block">
        <h2 class="contact-title">Blood Bank Stock</h2>
        
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BloodGroup)</th>
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                    <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                    @*<th>@Html.DisplayNameFor(model => model.Description)</th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.BloodGroup)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                        @*<td>@Html.DisplayFor(modelItem => item.Description)</td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>