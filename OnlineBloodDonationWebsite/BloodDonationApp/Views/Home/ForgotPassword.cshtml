@{
    ViewBag.Title = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Forgot Password - Blood Donation</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('@Url.Content("~/Content/Template/images/login pic.png")') center/cover no-repeat fixed;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            font-family: 'Poppins', sans-serif;
        }

        .forgot-password-container {
            width: 100%;
            max-width: 400px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            padding: 40px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .forgot-password-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
        }

        .forgot-password-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .forgot-password-header h2 {
            color: #fff;
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .forgot-password-header p {
            color: rgba(255, 255, 255, 0.8);
            font-size: 14px;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.1);
            border: none;
            border-radius: 25px;
            padding: 12px 20px;
            color: #fff;
            font-size: 14px;
            transition: all 0.3s ease;
            height: 48px;
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.6);
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.2);
            box-shadow: none;
            color: #fff;
        }

        .btn-submit {
            background: linear-gradient(135deg, #ff416c, #ff4b2b);
            color: white;
            font-size: 16px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 12px;
            border-radius: 25px;
            border: none;
            width: 100%;
            transition: all 0.3s ease;
            margin-top: 1rem;
        }

        .btn-submit:hover {
            background: linear-gradient(135deg, #ff4b2b, #ff416c);
            transform: translateY(-2px);
        }

        .btn-home {
            background: transparent;
            color: rgba(255, 255, 255, 0.8);
            font-size: 12px;
            padding: 6px 12px;
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            transition: all 0.3s ease;
            display: inline-block;
            margin-top: 15px;
            text-decoration: none;
        }

        .btn-home:hover {
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            transform: translateY(-2px);
        }

        .alert {
            border-radius: 15px;
            backdrop-filter: blur(5px);
            background: rgba(255, 255, 255, 0.1);
            border: none;
        }

        .alert-success {
            color: #d4edda;
            border: 1px solid rgba(40, 167, 69, 0.3);
        }

        .alert-danger {
            color: #f8d7da;
            border: 1px solid rgba(220, 53, 69, 0.3);
        }

        @@media (max-width: 576px) {
            .forgot-password-container {
                padding: 25px;
                margin: 15px;
            }

            .form-control {
                padding: 10px 15px;
            }
        }
    </style>
</head>
<body>
    <div class="forgot-password-container">
        <div class="forgot-password-header">
            <h2>Reset Password</h2>
            <p>Enter your email to receive reset instructions</p>
        </div>

        @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <input type="email" name="email" class="form-control" placeholder="Email address" required />
            </div>

            <button type="submit" class="btn btn-submit">SEND RESET LINK</button>

            <div class="text-center mt-3">
                <a href="@Url.Action("Login", "Home")" class="btn btn-home">
                    <i class="fas fa-arrow-left mr-2"></i>BACK TO LOGIN
                </a>
            </div>
        }

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success mt-3">
                @ViewBag.Message
            </div>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-3">
                @Html.ValidationSummary()
            </div>
        }
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>