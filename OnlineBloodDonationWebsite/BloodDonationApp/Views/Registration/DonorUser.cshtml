@model BloodDonationApp.Models.RegisterationMV
@{
    ViewBag.Title = "Donor Registration ";
}



<div class="appointment-form-wrapper theme-custom-box-shadow text-center clearfix wow zoomIn" style="padding: 30px; border-radius: 15px; border: 1px solid #e0e0e0;">
    <h3 class="join-heading join-heading-alt" style="font-size: 28px; color: #fff; margin-bottom: 25px; font-weight: 600; text-transform: uppercase; letter-spacing: 1px;">Donor Registration</h3>
    @using (Html.BeginForm("DonorUser", "Registration", FormMethod.Post, new { @class = "appointment-form" }))
    {

        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserTypeID)
        @Html.HiddenFor(model => model.User.UserID)
        @Html.HiddenFor(model => model.User.UserName)
        @Html.HiddenFor(model => model.User.Password)
        @Html.HiddenFor(model => model.User.AccountStatus)
        @Html.HiddenFor(model => model.User.AccountStatusID)
        @Html.HiddenFor(model => model.User.Description)
        @Html.HiddenFor(model => model.User.EmailAddress)

        <div class="form-row" style="display: flex; flex-wrap: wrap; gap: 20px;">
            <div class="form-group col-md-6" style="flex: 1 1 45%;">
                @Html.EditorFor(model => model.Donor.FullName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Full Name", @type = "text" } })
                @Html.ValidationMessageFor(model => model.Donor.FullName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-md-6" style="flex: 1 1 45%;">
                @Html.EditorFor(model => model.Donor.ContactNo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Contact No" } })
                @Html.ValidationMessageFor(model => model.Donor.ContactNo, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-md-6" style="flex: 1 1 45%;">
                @Html.EditorFor(model => model.Donor.CNIC, new { htmlAttributes = new { @class = "form-control", @placeholder = "CNIC" } })
                @Html.ValidationMessageFor(model => model.Donor.CNIC, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-md-6" style="flex: 1 1 45%;">
                <div class="select-style">
                    @Html.DropDownList("GenderID", null, "--Select Gender--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.GenderID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6" style="flex: 1 1 45%;">
                <div class="select-style">
                    @Html.DropDownList("BloodGroupID", null, "--Select Blood Group--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.BloodGroupID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-6" style="flex: 1 1 45%;">
                <div class="select-style">
                    @Html.DropDownList("CityID", null, "--Your City--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CityID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6" style="flex: 1 1 45%;">
                @Html.EditorFor(model => model.Donor.LastDonationDate, new { htmlAttributes = new { @class = "form-control", @placeholder = "Last Donation Date" } })
                @Html.ValidationMessageFor(model => model.Donor.LastDonationDate, "", new { @class = "text-danger" })
            </div>


            <div class="form-group col-md-6" style="flex: 1 1 45%;">
                @Html.EditorFor(model => model.Donor.Location, new { htmlAttributes = new { @class = "form-control", @placeholder = "Address", @type = "text" } })
                @Html.ValidationMessageFor(model => model.Donor.Location, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-12 col-sm-12 col-xs-12" style="margin-top: 25px;">
            <button id="btn_submit" class="btn btn-theme" type="submit" style="background: radial-gradient(circle at center, #ed2d2d, #8a0303); color: white; padding: 12px 30px; border: none; border-radius: 8px; font-size: 16px; cursor: pointer; transition: background 0.3s ease;">SUBMIT</button>
        </div>
    }

</div>

<style>
    .form-control:focus {
        border-color: #ff6f61;
        box-shadow: 0 0 8px rgba(255, 111, 97, 0.4);
    }

    .btn-theme:hover {
        background: linear-gradient(135deg, #ff3b2f, #ff6f61);
    }

    .select-style select {
        appearance: none;
        -webkit-appearance: none;
        -moz-appearance: none;
        background: url('data:image/svg+xml;utf8,<svg fill="%23333" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg"><path d="M7 10l5 5 5-5z"/><path d="M0 0h24v24H0z" fill="none"/></svg>') no-repeat right 10px center;
        background-size: 12px;
    }
</style>